<core:FragmentDefinition
	  xmlns="sap.m"
	  xmlns:l="sap.ui.layout"
	  xmlns:f="sap.ui.layout.form"
	  xmlns:core="sap.ui.core">

<Dialog title="Add Task" contentWidth="500px" icon="sap-icon://task">
<content>
  <Panel>
  	<content>
  	 <l:VerticalLayout width="100%">
  	    <l:content>
  	      <f:Form editable="true">
  	        <f:layout>
  	          <f:ResponsiveGridLayout></f:ResponsiveGridLayout>
  	        </f:layout>
  	        <f:formContainers>
  	          <f:FormContainer>
  	          
  	            <f:formElements>
  	              <f:FormElement>
  	                <l:VerticalLayout>
  	                  <Label text="Title"></Label>
  	                  <Input id="txtTitleFTask" maxLength="50"></Input>
  	                  <l:layoutData>
  	                    <l:GridData span="L6 M6 S12"></l:GridData>
  	                  </l:layoutData>
  	                </l:VerticalLayout>
  	              </f:FormElement>
  	            </f:formElements>
  	            
  	            
  	            <f:formElements>
  	              <f:FormElement>
  	                <l:VerticalLayout>
  	                  <Label text="User"></Label>
  	                 <Combobox id="cbUserFTask" width="100%" intes="{/Team}">
  	                 </Combobox>
  	                  <l:layoutData>
  	                    <l:GridData span="L6 M6 S12"></l:GridData>
  	                  </l:layoutData>
  	                </l:VerticalLayout>
  	              </f:FormElement>
  	            </f:formElements>
  	            
  	          </f:FormContainer>
  	        </f:formContainers>      
  	      </f:Form>
  	    </l:content>
  	 </l:VerticalLayout>
  	</content>
  </Panel>
</content>

</Dialog>
</core:FragmentDefinition>