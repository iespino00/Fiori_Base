<mvc:View
    controllerName="com.dudev.UI5C.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Page showHeader="true" title="{i18n>appTitle}" class="whitePage">
        <content>
        <Panel class="sapUiResponsiveMargin" width="auto">
	        
	        <headerToolbar class="sapUiSmallMarginTop">
	          <Toolbar>
	             <Title id="tiTasks" text="Tasks"> </Title>
	             <ToolbarSpacer></ToolbarSpacer>
	               <Button id="btnTasks" icon="sap-icon://task" type="Default" tooltip="Change to tasks" visible="false">    </Button>
	               <Button id="btnTeam" icon="sap-icon://group" type="Default" tooltip="Change to team">     </Button>
	               <Button icon="sap-icon://add" type="Emphasized" tooltop="Add"></Button>
	          </Toolbar>
	        </headerToolbar> 
	        
	        <content>
	     		<SearchField id="txtSearch" placeholder="Search">
	     		</SearchField>   
	        </content> 
        
        </Panel>
        
            <Panel id="panTask" class="sapUiResponsiveMargin" width="auto">
	            <content>
	           		<Table id="tabTasks" items="{/Tasks}">
	           		
	           		  <columns>
	           		    <Column>
	           		      <Label text="Task" design="Bold"></Label>
	           		    </Column>
	           		    <Column hAlign="Center">
	           		      <Label text="Assigned To" design="Bold"></Label>
	           		    </Column>
	           		    <Column>
	           		      <Label text="Progress" design="Bold"></Label>
	           		    </Column>
	           		    <Column>
	           		      <Label text="Status" design="Bold"></Label>
	           		    </Column>
	           		  </columns>
	           		  
	           		  <items>
	           		    <ColumnListItem type="Navigation" vAlign="Middle">
	           		    	<cells>
	           		    		<ObjectIdentifier title="{Name}" text="{Date}"></ObjectIdentifier>
	           		    		<Image width="40px" src="{Photo}" tooltip="{User}" class="roundImage"></Image>
	           		    		<ProgressIndicator percentValue="{Progress}" displayValue="{Progress}%"></ProgressIndicator>
	           		    		<Text text ="{Status}"></Text>
	           		    	</cells> 	
	           		    </ColumnListItem>
	           
	           		  </items>
	           		</Table>
	            </content>
            </Panel>
           
            <Panel id="panTeam" class="sapUIResponsiveMargin" width="auto">
	            <content>
		            <Table id="tabTeam" items="{/Team}">
		            
		            	<columns>
		            		<Column vAlign="Middle">
		            			<Label text="User" design="Bold"></Label>
		            		</Column>
		            	</columns>
		            	
		            	<items>
		            		<ColumnListItem type="Navigation" vAlign="Middle">
		            			<cells>
		            			<l:HorizontalLayout>
		            				<Image width="40px" src="{Photo}" class="roundImage"></Image>
		            				<ObjectIdentifier title="{Name}" text="Role" class="sapUiSmallMarginBegin"></ObjectIdentifier>
		            				
		            			</l:HorizontalLayout>
		            			</cells>
		            		</ColumnListItem>
		            	</items>
		            	
		            </Table>
	            </content>
            </Panel>
                   
        </content>
    </Page>
</mvc:View>